<%= form_for @car do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Brand %><br />
    <%= f.text_field :brand %>
  </div>
  <div class="field">
    <%= f.label :Model %><br />
    <%= f.text_field :carmodel %>
  </div>
  <div class="field">
    <%= f.label :Years %><br />
    <%= f.text_field :year %>
  </div>
  <div class="field">
    <%= f.label :CC %><br />
    <%= f.number_field :cc %>
  </div>
  <div class="field">
    <%= f.label :Used %><br />
    <%= f.check_box :used %>
  </div>
  <div class="field">
    <%= f.label :km %><br />
    <%= f.text_field :km %>
  </div>
  <div class="field">
    <%= f.label :Price %><br />
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :'Comment (Max.30)' %><br />
    <%= f.text_area :comment , :maxlength => 30%>
  </div>
  <div class="field">
     <%= f.label :Picture %><br/>
     <%= f.file_field :pic %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
